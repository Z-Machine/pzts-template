{
  // HACK: until tstl updates their extension
  //"$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
  "compilerOptions": {
    // Required
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "module": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,

    // Configurable
    "rootDirs": ["shared", "client", "server"],
    "outDir": "../dist",
    "types": [
      "../typing",
    ],
    "plugins": [
      {
        "transform": "../plugins/debug",
        "enabled": false, // This controls if certain macros evaluate. $print
        "verbose": true
      }
    ],
    "composite": true,
    "tsBuildInfoFile": "../dist/.tsbuildinfo"
  },
  "tstl": {
    "luaTarget": "5.1",
    "noImplicitSelf": true,
    "tstlVerbose": false,
    "luaLibImport": "none",
    "noHeader": true,
    "sourceMapTraceback": false,
    "luaPlugins": [
      { "name": "../plugins/addHeaderFooter" },
      { "name": "../plugins/fixRequireStatements" }
    ],
  },
  "exclude": ["node_modules"]
}
